    <input type="text" id="userInput" placeholder="Ask Mia anything..." />
    <button onclick="askMia()">Ask</button>
  </div>
  <pre id="response">Mia is ready to help you ðŸš€</pre>

  <script>
    async function askMia() {
      const input = document.getElementById("userInput").value;
      const responseBox = document.getElementById("response");
      responseBox.innerText = "Mia is thinking... ðŸ¤”";

      const response = await fetch("https://YOUR_BACKEND_URL_HERE.com/mia", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ prompt: input })
      });

      const data = await response.json();
      responseBox.innerText = data.reply || "Mia didn't understand that.";
    }
  </script>
